@import 'node_modules/nib/index'

mustard_color= #a29061
main_text_color= #d6d6d6
purple_text_color= #9d96ac
main_background_color = #0d0a1b
border_color = #5E5871

html,body
  background-color: main_background_color 
  color: #00142f
  text-align: center 
  padding: 0px
  margin:0px
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 

ul 
  margin: 0px 
  padding: 0px
li 
  margin: 0px 
  padding: 0px 

a 
  color: main_text_color
  text-decoration: none

#backgrounds 
  width: 100%
  z-index: 0
  position: fixed
  top: 0px
  left: 0px 

  height: 3400px
  div 
    width: 100%
    height: 100%
    position:absolute
    top: 0px
    left:0px
    -moz-transform: translate3d(0,0,0)
    transform: translate3d(0,0,0)
    -webkit-transform: translate3d(0,0,0)
    &.stars 
      background: url(/images/stars-background.png) 100% repeat-y   
      background-position: 0px 0px

    &.jupiter
      background: url(/images/jupiter.png) 100%  no-repeat 
      background-position: 700px 259px
    &.saturn
      background: url(/images/saturn.png) 100%  no-repeat
      background-position: -243px 700px
    &.earth
      background: url(/images/earth.png) 100%  no-repeat
      background-position: -240px 2329px
    &.mars
      background: url(/images/mars.png) 100%  no-repeat
      background-position: 650px 1301px
    &.moon
      background: url(/images/moon.png) 100%  no-repeat
      background-position: 710px 2001px
#header 
  width: 100% 
  height: 50px 
  background-color: black
  img
    float: left
    margin:20px 0px 0px 40px

#content
  width: 830px 
  margin-left:auto
  margin-right:auto
  text-align: center
  position:relative
  transform: translate3d(0,0,0)
  -moz-transform: translate3d(0,0,0)
  -webkit-transform: translate3d(0,0,0)
  z-index: 1
  img.logo
    padding: 100px 0px 100px 0px 

  section
    box-sizing: border-box 
    padding: 60px 85px 60px 30px
    border-top: 1px solid border_color

  h1 
    font-size: 28px 
    color: mustard_color
    font-weight: 200
  h2
    font-style: italic 
    font-size: 18px
    color: purple_text_color  
    font-weight: 200

  .bottom-line:after
    content: ""
    display: block
    height: 1px 
    width: 150px
    margin: 40px auto 40px auto 
    background-color: border_color

  p
    color: main_text_color
    line-height: 20px
    font-size: 16px
    line-height: 28px
    font-weight: 200
  #intro 
    p
      text-align: left 
  #womans-board

    ul.columns
      text-align: left
      color: main_text_color
      columns: 400px 3;
      -webkit-columns:150px 3; /* Safari and Chrome */
      -moz-columns:150px 3; /* Firefox */
      -webkit-column-gap:132px;
      -moz-column-gap:132px;
      column-gap:132px;
      font-size: 13px 
      list-style: none
      li
        margin-bottom: 10px
        .role 
          font-weight: bold
          font-size: 13px
          margin-top: 0px 

  #Schedule 
    li
      margin-bottom: 50px
      .time 
        font-size: 24px
        font-weight: bold
        font-style: italic 
        font-family: Georgia
        margin-bottom: 0px
      .event 
        font-size: 16px
        margin-top: 0px
        font-weight: 100


  #map 
    width: 455px 
    height: 215px

  #sponsors
    padding: 40px 0px 40px 0px
    p
      font-style: italic
      color: #9d96ac
      font-size: 15px
    img 
      display: inline-block
      margin: 0px 40px 20px 0px
      vertical-align: middle
      

  #participate
    ul
      list-style: none 
      padding: 0px 
      margin: 0px
      color: main_text_color
      li
        margin-bottom: 20px 
        span
          font-style: italic

  #general_info
    padding: 60px 0px 60px 0px 
    #map
      display: inline-block
      vertical-align: top
    .details
      display: inline-block
      vertical-align: top
      width: 350px
      text-align: left 
      font-size: 16px
      margin-left: 20px
      padding: 0px
      p
        line-height: 20px
      .top
        font-family: Georgia
        font-style: italic
        padding-top: 0px
        margin-top: 0px
        margin-bottom: 100px
  #photo-gal
    padding-left: 0px 
    padding-right: 0px

footer
  width: 100%
  height: 150px 
  background-color: #080512
  position:relative 
  z-index: 2
  color: #d6d6d6
  .inner 
    width: 830px
    margin-left: auto
    margin-right: auto
    text-align: left
    box-sizing: border-box
    padding: 40px 0px 40px 0px
    img 
      display: inline-block
      vertical-align: top
    .address
      font-size: 14px
      vertical-align: top
      display: inline-block
      margin-left: 30px 
      line-height: 20px


#galleria
  width: 830px
  height: 500px
  margin: 0px
  padding: 0px
  .galleria-container 
    background-color: #0D0A1B
  // .galleria-thumbnails
  //   left: 80px
  .galleria-counter
    display: none !important 