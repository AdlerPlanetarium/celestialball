@import 'node_modules/nib/index'

yellow_color= #D2BE02
/* main_text_color= #d6d6d6 */
main_text_color = #d6d6d6
main_background_color = #000D13
border_color = #5E5871

medium_vertical_margin = 4.1em

.cash
  color: yellow_color

html,body
  border-top: 2px solid yellow_color;
  background-color: main_background_color 
  color: main_text_color
  padding: 0px
  margin:0px
  font-family: 'Lato', sans-serif


ul 
  margin: 0px 
  padding: 0px
  list-style: none

li 
  margin: 0px 
  padding: 0px
  display:inline-block 
  color: main_text_color

a 
  color: main_text_color
  text-decoration: none



.left-column
  width: 700px
  float:left
  
.right-column
  float:right
  width: 200px

#header
  /*width: 100% 
  margin: auto*/
  max-width: 1000px
  margin-left:  auto 
  margin-right: auto
  position: relative
  height: 550px
  margin-bottom:150px
  background: url(./images/cball-ader-building.png) no-repeat center

  img
    display: block
    margin: 0 auto

  img#logo
      padding-top: 125px
      opacity: 0.5;
      

#content
  width: 1000px 
  margin:  auto 
  position:relative

  .no-column
    clear:both

  section
    box-sizing: border-box 
    /* padding: 60px 85px 60px 85px*/
    margin-bottom: 100px
  
  h1, h2, h2
    text-transform: uppercase
    
  h1 
    font-size: 24px
    color: yellow_color
    font-weight: 300
    letter-spacing: 4px
    line-height: 1.1

  h2 
    font-size: 18px
    color: yellow_color
    
  h2.white
    font-weight: 300
    letter-spacing: 4px
    color: white
      
  h3 
    font-size: 16px
    color: white    
 
  p
    color: main_text_color
    line-height: 20px
    font-size: 16px
    line-height: 28px
    font-weight: 300

  .medium-vertical-margin
      margin-top: medium_vertical_margin
  
  #intro 
   
 
  #womans-board
   
    ul.columns
      text-align: left
      color: main_text_color
      columns: 400px 3;
      -webkit-columns:150px 3; 
      -moz-columns:150px 3;
      -webkit-column-gap:132px;
      -moz-column-gap:132px;
      column-gap:132px;
      font-size: 13px 
      
      .past-chair:after
        content: " * "
        color: yellow_color

      li
        display: block 
        margin-bottom: 10px
        .role 
          text-transform: uppercase
          color: yellow_color
          font-weight: bold
          font-size: 13px
          margin-top: 0px 
         
  
  #map 
    width: 455px 
    height: 215px

  #sponsors
    padding: 40px 0px 40px 0px
    p
      font-style: italic
      color: #9d96ac
      font-size: 15px
    img 
      display: inline-block
      margin: 0px 40px 20px 0px
      vertical-align: middle
      
  #auction
    ul
      li
        width: 24%
        img
           border-radius: 75px;
    
  #support
    ul  
      li
        width: 30%

  #general_info
    padding: 60px 0px 60px 0px 
    #map
      display: inline-block
      vertical-align: top
    .details
      display: inline-block
      vertical-align: top
      width: 350px
      text-align: left 
      font-size: 16px
      margin-left: 20px
      padding: 0px
      p
        line-height: 20px
      .top
        font-family: Georgia
        font-style: italic
        padding-top: 0px
        margin-top: 0px
        margin-bottom: 100px
  #photo-gal
    padding-left: 0px 
    padding-right: 0px

.footer
  margin-top: 125px
  width: 100%
  height: 150px 
  position:relative 
  z-index: 2
 

  .inner 
    width: 830px
    margin-left: auto
    margin-right: auto
    text-align: left
    box-sizing: border-box
    padding: 40px 0px 40px 0px
    img 
      display: inline-block
      vertical-align: top
    .address
      font-size: 14px
      vertical-align: top
      display: inline-block
      margin-left: 30px 
      line-height: 20px

#galleria
  width: 700px
  height: 500px
  margin: 0px
  padding: 0px
  .galleria-stage
    bottom: 97px
  .galleria-carousel
     height: 90px
  .galleria-container
    height: 87px
    background-color: main_background_color
  .galleria-counter
    display: none !important 
  .galleria-thumbnails
     .galleria-image
      height: 87px 
      width: 131px
      padding-left: 2px
      padding-tightt: 2px
      &.active
        border: 2px solid yellow_color
  