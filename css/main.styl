@import 'node_modules/nib/index'

// variables 
main_text_color = #d6d6d6
main_background_color = #000D13
yellow_color= #D2BE02

medium_vertical_margin = 4.1em

/* general */
html,body
  border-top: 2px solid yellow_color;
  background-color: main_background_color 
  color: main_text_color
  padding: 0px
  margin:0px
  font-family: 'Lato', sans-serif

ul 
  margin: 0px 
  padding: 0px
  list-style: none

li 
  margin: 0px 
  padding: 0px
  display:inline-block 
  color: main_text_color

a 
  color: main_text_color
  text-decoration: none


.left-column
  width: 700px
  float:left
  
.right-column
  float:right
  width: 200px

.no-column
    clear:both

.medium-vertical-margin
    margin-top: medium_vertical_margin

  
#header
  max-width: 1000px
  margin-left:  auto 
  margin-right: auto
  position: relative
  height: 550px
  margin-bottom:150px
  background: url(./images/cball-ader-building.png) no-repeat center

  img
    display: block
    margin: 0 auto

  img#logo
    padding-top: 125px


#content
  width: 1000px 
  margin:  auto 
  
  section
    box-sizing: border-box 
    margin-bottom: 100px
  
  h1, h2, h2
    text-transform: uppercase
    
  h1 
    font-size: 24px
    color: yellow_color
    font-weight: 300
    letter-spacing: 4px
    line-height: 1.1

  h2 
    font-size: 18px
    color: yellow_color
    
  h2.white
    font-weight: 300
    letter-spacing: 4px
    color: white
      
  h3 
    font-size: 16px
    color: white    
 
  p
    color: main_text_color
    line-height: 20px
    font-size: 16px
    line-height: 28px
    font-weight: 300

  .cash
    color: yellow_color

  .yellow
    color: yellow_color

  /* main content left -column */  
  .left-column 
    #photo-gal
      #galleria
        width: 700px
        height: 500px
        margin: 0px
        padding: 0px
        .galleria-stage
          bottom: 97px
        .galleria-carousel
           height: 90px
        .galleria-container
          height: 87px
          background-color: main_background_color
        .galleria-counter
          display: none !important
        .galleria-thumbnails
           .galleria-image
            height: 87px 
            width: 131px
            padding-left: 2px
            padding-right: 2px
            &.active
              border: 2px solid yellow_color
    
    #auction
      ul
        li
          width: 24%
          img
             border-radius: 75px;
          .auction-item
            padding-left:  5px
            padding-right: 5px
          h4.auction-item-name
            color: yellow_color
          .auction-item-description
            font-size: 75%
            line-height: 120%

    #support
      ul  
        li
          width: 33%

    #sponsors
      padding: 40px 0px 40px 0px
      p
        font-style: italic
        color: #9d96ac
        font-size: 15px
      .logos
        div
          display: inline-block

          width: 24%
          img
            display: inline-block
            margin: 0px 40px 20px 0px
            vertical-align: middle

    #pnc
      #pnc-logo
        margin-left: 15px

  /* main content - right content */
  .right-column
    #womans-board
      ul.columns
        text-align: left
        color: main_text_color
        columns: 400px 3
        -webkit-columns:150px 3
        -moz-columns:150px 3;
        -webkit-column-gap:132px
        -moz-column-gap:132px
        column-gap:132px;
        font-size: 13px 
        
        .past-chair:after
          content: " * "
          color: yellow_color

        li
          display: block 
          margin-bottom: 10px
          .role 
            text-transform: uppercase
            color: yellow_color
            font-weight: bold
            font-size: 13px
            margin-top: 0px


.footer
  margin-top: 125px
  width: 100%
  height: 150px
  position:relative
  z-index: 2

 .left-column-footer
   width: 600px
   float:left 

   #contact
    p
      margin: 0
      font-size: 18px

  img#adler-wordmark-footer
    width: 175px