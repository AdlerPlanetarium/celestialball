    line-height: 20px
    font-size: 16px
    line-height: 28px
    font-weight: 200
  #intro 
    p
      text-align: left 
 
  #womans-board
   
    ul.columns
      text-align: left
      color: main_text_color
      columns: 400px 3;
      -webkit-columns:150px 3; 
      -moz-columns:150px 3;
      -webkit-column-gap:132px;
      -moz-column-gap:132px;
      column-gap:132px;
      font-size: 13px 
      
      li
        display: block 
        margin-bottom: 10px
        .role 
          color: yellow_color
          font-weight: bold
          font-size: 13px
          margin-top: 0px 
         
